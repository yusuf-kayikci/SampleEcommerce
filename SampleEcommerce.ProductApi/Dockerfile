#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/core/aspnet:3.1-buster-slim AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster AS build
WORKDIR /src
COPY ["SampleEcommerce.ProductApi/SampleEcommerce.ProductApi.csproj", "SampleEcommerce.ProductApi/"]
COPY ["SampleEcommerce.Data/SampleEcommerce.Data.csproj", "SampleEcommerce.Data/"]
COPY ["SampleEcommerce.Core/SampleEcommerce.Core.csproj", "SampleEcommerce.Core/"]
COPY ["SampleEcommerce.Business/SampleEcommerce.Business.csproj", "SampleEcommerce.Business/"]
RUN dotnet restore "SampleEcommerce.ProductApi/SampleEcommerce.ProductApi.csproj"
COPY . .
WORKDIR "/src/SampleEcommerce.ProductApi"
RUN dotnet build "SampleEcommerce.ProductApi.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "SampleEcommerce.ProductApi.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "SampleEcommerce.ProductApi.dll"]
